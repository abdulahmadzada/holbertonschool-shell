#!/usr/bin/env bash
# This script creates a PID file in /var/run, handles signals, and prints messages indefinitely

PIDFILE="/var/run/myscript.pid"

if ! echo "$$" > "$PIDFILE" 2>/dev/null; then
    echo "Error: Cannot write PID file to $PIDFILE. Permission denied." >&2
    exit 1
fi

cleanup() {
    rm -f "$PIDFILE"
    exit 0
}

term_handler() {
    echo "I hate the kill command"
    cleanup
}

int_handler() {
    echo "Y U no love me?!"
}

trap 'term_handler' SIGTERM
trap 'int_handler' SIGINT
trap 'cleanup' SIGQUIT

while true; do
    echo "To infinity and beyond"
    sleep 1
done
