#!/usr/bin/env bash
# Script that manages PID file and handles signals correctly

# PID file location
PID_FILE="/var/run/myscript.pid"

# Ensure we can write to /var/run
if ! touch "$PID_FILE" 2>/dev/null; then
    echo "Error: Cannot write to $PID_FILE" >&2
    exit 1
fi

# Create PID file
echo $$ > "$PID_FILE"

# Cleanup function
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Signal handlers
trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'echo "Y U no love me?!"; cleanup' SIGINT
trap cleanup SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
