#!/usr/bin/env bash
# This script creates a PID file, handles signals, and prints messages indefinitely

PIDFILE="/tmp/myscript.pid"

cleanup() {
    rm -f "$PIDFILE"
    exit 0
}

term_handler() {
    echo "I hate the kill command"
    cleanup
}

int_handler() {
    echo "Y U no love me?!"
}

echo "$$" > "$PIDFILE"

trap 'term_handler' SIGTERM
trap 'int_handler' SIGINT
trap 'cleanup' SIGQUIT

while true; do
    echo "To infinity and beyond"
    sleep 1
done
