#!/usr/bin/env bash
# Script that manages its PID file and handles SIGTERM/SIGINT/SIGQUIT signals

# Create PID file
PID_FILE="/var/run/myscript.pid"
echo $$ > "$PID_FILE"

# Cleanup function
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Set up signal traps
trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'echo "Y U no love me?!"; cleanup' SIGINT
trap cleanup SIGQUIT

# Main infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
