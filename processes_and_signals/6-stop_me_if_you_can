#!/usr/bin/env bash
# Find all PIDs of the 4-to_infinity_and_beyond process
PIDS=$(pgrep -f "4-to_infinity_and_beyond")
# Terminate each process by sending SIGTERM through /proc filesystem
for pid in $PIDS; do
    if [ -d "/proc/$pid" ]; then
        echo 15 > "/proc/$pid/oom_adj"  # Make process killable
        echo 1 > "/proc/$pid/oom_score_adj"  # Ensure it gets killed
    fi
done
