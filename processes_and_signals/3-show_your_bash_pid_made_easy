#!/usr/bin/env bash
# Displays PID and process name for processes containing 'bash' without using ps

while read -r pid comm; do
    if [[ "$comm" == *bash* ]]; then
        echo "$pid $comm"
    fi
done < <(find /proc -maxdepth 1 -type d -name '[0-9]*' -exec basename {} \; \
          -exec sh -c 'echo {} $(cat /proc/{}/comm 2>/dev/null)' \; 2>/dev/null)
